<Window x:Class="BoardKnightWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardKnightWPF" xmlns:UserControls="clr-namespace:BoardKnightWPF.View.UserControls"
        mc:Ignorable="d"
        Title="Board Knight" Height="900" Width="1600">

    
    <Grid>


        <Grid Margin="50" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            

            <TextBlock Name="AppTitle" Text="Board Knight" FontSize="75" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <Button Grid.Row="2" Grid.Column="0" Name="ManagePlayersButton" Content="Manage Players" FontSize="28"/>
            <Button Grid.Row="2" Grid.Column="1" Name="StartBracketButton" Content="Start Bracket" FontSize="28"/>
        </Grid>
    </Grid>
</Window>
